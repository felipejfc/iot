#include <zephyr/dt-bindings/gpio/gpio.h>

/*
 * Custom configuration for Pro Micro nRF52840 with MCUboot
 *
 * Relay control: P0.29 (active high)
 * Button: P0.02 (active low with pull-up)
 * Voltage ADC: VDDH/5
 */

 / {
	buttons {
		compatible = "gpio-keys";

		/* Physical button on GPIO 0.02 */
		button0: button_0 {
			gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Main button";
		};
	};

	leds {
		compatible = "gpio-leds";

		/* Relay/MOSFET control output on P0.17 (active high) */
		relay0: relay_0 {
			gpios = <&gpio0 29 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
			label = "Relay control";
		};
	};

	/* VCC power control - P0.13 LOW = VCC off, HIGH = VCC on */
	vcc_ctrl: vcc_control {
		compatible = "gpio-leds";
		vcc_pin: vcc {
			gpios = <&gpio0 13 GPIO_ACTIVE_HIGH>;
			label = "VCC control";
		};
	};

	aliases {
		sw0 = &button0;
		relay0 = &relay0;
		vcc-ctrl = &vcc_pin;
	};

	/* VDDH voltage sensing via internal divider */
	zephyr,user {
		io-channels = <&adc 7>;
	};
};

/* =============================================================================
 * DISABLE UNUSED PERIPHERALS FOR LOW POWER
 * =============================================================================
 */

/* Enable DC-DC converter for better power efficiency */
&reg1 {
	regulator-initial-mode = <2>; /* NRF5X_REG_MODE_DCDC */
};

/* Disable USB peripheral completely */
&usbd {
	status = "disabled";
};

/* Disable USB voltage regulator */
&reg0 {
	status = "disabled";
};

/* Disable UART */
&uart0 {
	status = "disabled";
};

/* Disable I2C */
&i2c0 {
	status = "disabled";
};

&i2c1 {
	status = "disabled";
};

/* Disable SPI */
&spi0 {
	status = "disabled";
};

&spi1 {
	status = "disabled";
};

&spi2 {
	status = "disabled";
};

/* Disable PWM */
&pwm0 {
	status = "disabled";
};

/* Enable ADC for VDDH voltage sensing */
&adc {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	/* VDDHDIV5 - measures VDDH/5 for supply voltage monitoring */
	channel@7 {
		reg = <7>;
		zephyr,gain = "ADC_GAIN_1_6";
		zephyr,reference = "ADC_REF_INTERNAL";
		zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
		zephyr,input-positive = <NRF_SAADC_VDDHDIV5>;
		zephyr,resolution = <12>;
	};
};

/* Disable QSPI if present */
&qspi {
	status = "disabled";
};

/* Disable SPI3 */
&spi3 {
	status = "disabled";
};

/* Disable WDT if not needed */
&wdt0 {
	status = "disabled";
};

/* Disable RTC2 (RTC0/1 used by system) */
&rtc2 {
	status = "disabled";
};

/* Disable timer peripherals not needed */
&timer0 {
	status = "disabled";
};

&timer1 {
	status = "disabled";
};

&timer2 {
	status = "disabled";
};

/* Disable board's default LED0 on P0.15 */
&led0 {
	status = "disabled";
};
